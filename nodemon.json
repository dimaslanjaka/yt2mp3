{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "vendor",
    "node_modules",
    "processed"
  ],
  "delay": "2500",
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "start": "node -e console.clear()"
  },
  "watch": ["views", "public", "config", "*.js", "app", "src"],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json"
}

{
  "files.exclude": {
    "**/node_modules": true
  },
  "terminal.integrated.env.windows": {
    "PATH": "${env:PATH};${workspaceFolder}\\bin;C:\\another\\folder;D:/bin/ffmpeg/bin"
  },
  "code-runner.respectShebang": true,
  "code-runner.executorMap": {
    "javascript": "node -r ts-node/register -r dotenv/config"
  },
  "eslint.packageManager": "yarn",
  "npm.packageManager": "yarn",
  "editor.codeActionsOnSave": { "source.fixAll": true, "source.organizeImports": true },
  "editor.formatOnSave": false
}
